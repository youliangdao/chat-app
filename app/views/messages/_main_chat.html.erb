<div class="chat-title">
  <div class="title">
    <div class="title-name"><%= @room.name %></div>
  </div>
  <div class="action">
    <div class="close-action">
      <a href="#">チャットを終了する</a>
    </div>
  </div>
</div>
<div class="chat-content">
  <div class="group">
    <div class="head-text">
      <div class="head-text-name">サンプル</div>
      <div class="head-text-date">2020/10/11 22:30</div>
    </div>
    <div class="foot-text">
      テスト
    </div>
  </div>
  <div class="group">
    <div class="head-text">
      <div class="head-text-name">サンプル</div>
      <div class="head-text-date">2020/10/11 22:45</div>
    </div>
    <div class="foot-text">
      テストテスト
    </div>
  </div>
</div>
<%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
  <div class="form-input">
    <%= f.text_field :content, class: 'form-message', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'form-submit' %>
<% end %>